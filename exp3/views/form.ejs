<h2><%= student ? 'Edit' : 'Add' %> Student</h2>
<form action="<%= student ? '/edit/' + student._id : '/add-student' %>" method="POST">
  <input type="text" name="name" value="<%= student ? student.name : '' %>" placeholder="Name" required><br>
  <input type="number" name="age" value="<%= student ? student.age : '' %>" placeholder="Age" required><br>
  <input type="email" name="email" value="<%= student ? student.email : '' %>" placeholder="Email" required><br>
  <button type="submit"><%= student ? 'Update' : 'Submit' %></button>
</form>
<a href="/students">View Students</a>
